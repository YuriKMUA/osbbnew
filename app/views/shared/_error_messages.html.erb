<% if @user.errors.any? %>
	<div id="error_explanation">
		<div class="alert alert-danger">
			Форма містить наступну к-сть помилок: <%= @user.errors.count %>
			<ul>
				
					<% @user.errors.full_messages.each do |msg| %>
				<li>
						<%= msg %>
				</li>
				<% end %>
			</ul>
		</div>
	</div>	
<% end%>