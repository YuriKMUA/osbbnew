<% provide :title, @user.lastname %>

	<div class="row">
		<aside class="col-md-4">
			<section class="user_info">
				<h1>
					<%= gravatar_for @user %>
					<%= @user.lastname %>, <%= @user.email %>
				</h1>
			</section>	
		</aside>
	</div>

<div class="row">
	<% @microposts.each do |micro|  %>
		<div class="row">
			<%= micro.content %>
		</div>
	<% end	%>
</div>

