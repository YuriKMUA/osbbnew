<% provide(:title, "Sign up") %>
<h1>Регистрация</h1>
<div class="col-md-6 col-md-offset-3">
	<%= form_for(@user) do |f| %>
		<%= render 'shared/error_messages' %>
		<%= f.label :lastname, "Никнейм" %>
		<%= f.text_field :lastname, placeholder: "придумайте никнейм" %>

		<%= f.label :email, "Электронный адресс" %>
		<%=  f.email_field :email, placeholder: "ваш эл. адресс" %>

		<%= f.label :password, "Пароль" %>
		<%= f.password_field :password, placeholder: "введите пароль" %>

		<%= f.label :password_confirmation, "Повторить пароль" %>
		<%= f.password_field :password_confirmation, placeholder: "повторите пароль" %>

		<%= f.submit "Создать акаунт", class: "btn btn-primary" %>
	<% end %>
</div>


